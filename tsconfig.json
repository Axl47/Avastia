{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"rootDir": "./src/",
		"outDir": "dist",
		"strict": true,
		"moduleResolution": "Node",
		"importHelpers": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": false,
		"typeRoots": [
			"node_modules/@types",
			"src/typings"
		],
		"sourceMap": false,
		"baseUrl": "./",
		"alwaysStrict": true,
		"declaration": true,
		"declarationMap": true,
		"verbatimModuleSyntax": true,
		"incremental": true,
		"lib": [
			"esnext"
		],
		"newLine": "lf",
		"noEmitHelpers": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"pretty": true,
		"useDefineForClassFields": true
	},
	"files": [
		"src/main.ts"
	],
	"include": [
		"src",
		"../environment.d.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	],
}